<h4 class="rooms-title"><%= @another_entry.customer.name %>さんとのメッセージ</h4>
<hr>
<div class="chats">
  <div class="chat">
    <div class="flash message mb-3">
     <%= flash[:alert] %>
    </div>
     <% @messages.each do |m| %>
      <% if m.customer_id == current_customer.id %>
       <div class="chat-box">
        <strong><%= m.body %></strong>
        <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
       </div>
      <% end %>
     <% end %>
  </div>
  <div class="posts">
    <%= form_with model: [@customer,@message] do |f| %>
      <%= f.text_field :body, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "送信",class: 'form-submit'%>
     <% end %>
  </div>
 </div>